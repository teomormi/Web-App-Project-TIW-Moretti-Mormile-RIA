<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" version="3.1">
  <display-name>TIW-Moretti-Mormile-PureHTML</display-name>
  <context-param>
    <param-name>dbUrl</param-name>
    <param-value>jdbc:mysql://localhost:3306/galleryimage?serverTimezone=UTC</param-value>
  </context-param>
  <context-param>
    <param-name>dbUser</param-name>
    <param-value>root</param-value>
  </context-param>
  <context-param>
    <param-name>dbPassword</param-name>
    <param-value>Itala!10</param-value>
  </context-param>
  <context-param>
    <param-name>dbDriver</param-name>
    <param-value>com.mysql.cj.jdbc.Driver</param-value>
  </context-param>
  <context-param>
    <param-name>outputpath</param-name>
    <param-value>\photos</param-value>
  </context-param> 
 <filter> 
      <filter-name>LoggedChecker</filter-name>
      <filter-class>it.polimi.tiw.filters.LoggedChecker</filter-class> 
 </filter> 
  <filter> 
      <filter-name>NotLoggedChecker</filter-name>
      <filter-class>it.polimi.tiw.filters.NotLoggedChecker</filter-class> 
 </filter> 
 <filter> 
      <filter-name>NoCacher</filter-name>
      <filter-class>it.polimi.tiw.filters.NoCacher</filter-class> 
 </filter> 
  <filter-mapping> 
    <filter-name>NoCacher</filter-name> 
    <url-pattern>/index.html</url-pattern> 
    <url-pattern>/home.html</url-pattern> 
 </filter-mapping> 
 <filter-mapping>
    <filter-name>NotLoggedChecker</filter-name> 
    <url-pattern>/index.html</url-pattern> 
    <url-pattern>/CreateUser</url-pattern>
    <url-pattern>/CheckLogin</url-pattern> 
 </filter-mapping>
 <filter-mapping>
    <filter-name>LoggedChecker</filter-name> 
    <url-pattern>/home.html</url-pattern> 
    <url-pattern>/GetAlbumsList</url-pattern>
    <url-pattern>/GetImagesList</url-pattern>
    <url-pattern>/GetImage/*</url-pattern>
    <url-pattern>/CreateImage</url-pattern>
	<url-pattern>/CreateComment</url-pattern>
	<url-pattern>/CreateAlbum</url-pattern>
	<url-pattern>/GetCommentsList</url-pattern>
	<url-pattern>/SaveAlbumsOrder</url-pattern>
 </filter-mapping> 
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
</web-app>